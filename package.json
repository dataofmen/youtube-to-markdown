{
  "name": "youtube-to-markdown-app",
  "version": "1.0.2",
  "description": "YouTube to Markdown Converter Mac App",
  "repository": {
    "type": "git",
    "url": "https://github.com/dataofmen/youtube-to-markdown.git"
  },
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "backend:install": "cd backend && npm install",
    "frontend:install": "cd frontend && npm install",
    "postinstall": "npm run backend:install && npm run frontend:install",
    "frontend:build": "cd frontend && npm run build",
    "app:build": "npm run frontend:build && electron-builder",
    "dev": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm run dev\" \"wait-on http://localhost:5173 && electron .\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.youtube-to-markdown.app",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "files": [
      "electron/**/*",
      "backend/src/**/*",
      "backend/package.json",
      "frontend/dist/**/*"
    ],
    "asarUnpack": [
      "backend/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/node_modules",
        "to": "app.asar.unpacked/backend/node_modules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "dataofmen",
        "repo": "youtube-to-markdown"
      }
    ]
  }
}